#!/usr/bin/env bash

NAME=scp-bm-rtg-test
docker exec $NAME echo ""
STATUS=$?
OP=$1

while [ "$STATUS" -gt 0 ] || [ "$OP" = "restart" ]; do
    OP=
    docker rm -f $NAME
    docker run \
        -v $(pwd)/node_modules:/api/node_modules \
        -v $(pwd)/modules:/api/src/modules \
        --name $NAME \
        synergycp/bm-rtg &
    STATUS=$?
    sleep 5
done

docker exec $NAME /api/bin/test
